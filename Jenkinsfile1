pipeline {
    agent any

    stages {

        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build Maven Project') {
            steps {
                sh "mvn clean install"
            }
        }

        stage('Copy & Start Remote App') {
            steps {
                sshagent(credentials: ['ubuntu-ssh']) {
                    sh """
                        scp -o StrictHostKeyChecking=no target/java_web_app-1.0-SNAPSHOT.jar ubuntu@54.145.4.146:/home/ubuntu/myapp/
                        ssh -o StrictHostKeyChecking=no ubuntu@54.145.4.146 'bash /home/ubuntu/myapp/start.sh'
                    """
                }
            }
        }
    }

    post {
        success {
            echo "Deployment Successful!"
        }
        failure {
            echo "Deployment Failed!"
        }
    }
}
